<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 6.2.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_6_2_0.dtd">

<service-builder package-path="com.liferay.contacts">
	<namespace>Contacts</namespace>
	<entity name="Entry" local-service="true" remote-service="true">
		<!-- PK fields -->
		<column name="entryId" type="long" primary="true"></column>
		<!-- Group instance -->
		<column name="groupId" type="long"></column>
		<!-- Audit fields -->
		<column name="companyId" type="long"></column>
		<column name="userId" type="long"></column>
		<column name="userName" type="String"></column>
		<column name="createDate" type="Date"></column>
		<column name="modifiedDate" type="Date"></column>
		<!-- Other fields -->
		<column name="fullName" type="String"></column>
		<column name="emailAddress" type="String"></column>
		<column name="comments" type="String"></column>
		<!-- Order -->
		<order by="asc">
			<order-column name="fullName" case-sensitive="false"></order-column>
		</order>
		<!-- Finder methods -->
		<finder name="UserId" return-type="Collection">
			<finder-column name="userId"></finder-column>
		</finder>
		<finder name="U_EA" return-type="Entry">
			<finder-column name="userId"></finder-column>
			<finder-column name="emailAddress"></finder-column>
		</finder>
	</entity>
	<exceptions>
		<exception>DuplicateEntryEmailAddress</exception>
		<exception>EntryEmailAddress</exception>
		<exception>EntryFullName</exception>
		<exception>RequiredEntryEmailAddress</exception>
	</exceptions>
</service-builder>